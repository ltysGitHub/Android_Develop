<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff">
    
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/main_kebiao"
        android:scaleType="centerInside"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:padding="4dp"
        android:layout_height="match_parent"
        android:src="@drawable/book_2x"
        android:clickable="true" />

    <ImageView
        android:id="@+id/main_xiaoyuan"
        android:scaleType="centerInside"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:padding="4dp"
        android:layout_height="match_parent"
        android:src="@drawable/position_2x"
        android:clickable="true" />

    <ImageView
        android:id="@+id/main_tongzhi"
        android:scaleType="centerInside"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:padding="4dp"
        android:layout_height="match_parent"
        android:src="@drawable/arlam_2x"
        android:clickable="true" />

	<ImageView
        android:id="@+id/main_biji"
        android:scaleType="centerInside"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:padding="4dp"
        android:layout_height="match_parent"
        android:src="@drawable/node_2x"
        android:clickable="true" />

    <TextView
        android:id="@+id/main_kongbai1"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/main_tianjia"
        android:scaleType="centerInside"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:paddingLeft="4dp"
        android:layout_height="match_parent"
        android:src="@drawable/start_2x"
        android:clickable="true" />
</LinearLayout>
<LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="#d0d0d0"
        >
</LinearLayout>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
    	android:layout_weight="2"
        android:orientation="horizontal" 
        >
        
        <TextView
            android:id="@+id/main_zhoushu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16sp" />
         
        <TextView
        android:layout_height="fill_parent"
    	android:layout_width="1dp"
    	android:layout_marginTop="3dp"
    	android:layout_marginBottom="3dp"
    	android:background="#d0d0d0"/>
        <TextView
            android:id="@+id/main_xingqi"
            android:layout_width="0dp"
            android:layout_weight="7.1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24sp" />
         <ImageView
            android:id="@+id/main_tianke"
            android:scaleType="centerInside"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/add_2x"
            android:clickable="true"/>
        
	</LinearLayout>
 	
 	<TextView
        android:layout_height="1dp"
    	android:layout_width="fill_parent"
    	android:background="#d0d0d0"/>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
    	android:layout_weight="25"
        android:orientation="horizontal" >
        
        <TextView 
            android:id="@+id/main_shijian"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:textSize="16sp" /> 
        <TextView
        	android:layout_height="fill_parent"
    		android:layout_width="1dp"
    		android:background="#d0d0d0"/> 
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="8">
            
        </LinearLayout>
             
    </LinearLayout>
 	
</LinearLayout>